<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Top Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/drop2_header">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_cross"
            android:paddingTop="10dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/headerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backBtn"
            android:layout_marginStart="16dp"
            android:text="ahlipay"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


    <!-- CARD AREA (Rounded Corners) -->
    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="311sp"
        android:layout_height="194sp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_card_bg"
        android:clipToOutline="true">

        <!-- Card Image -->
        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_card_image" />

        <!-- MASKED CARD NUMBER ONLY -->
        <TextView
            android:id="@+id/cardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:text="XXXX XXXX XXXX 1234"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:shadowColor="#AA000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />
    </FrameLayout>


    <!-- SUCCESS ROW INLINE -->
    <LinearLayout
        android:id="@+id/successRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardContainer"
        android:layout_marginTop="40dp">

        <!-- Tick Icon -->
        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/drop2_success" />

        <!-- Done Text -->
        <TextView
            android:id="@+id/doneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Done"
            android:textSize="20sp"
            android:textColor="#0A57A5" />
    </LinearLayout>

</RelativeLayout>
